<form class="login100-form validate-form flex-sb flex-w" action="/iniciar_sesion" method="POST">
    <span class="login100-form-title p-b-53">
        {{titulo}}
    </span>

    
    <div class="p-t-31 p-b-9">
        <span class="txt1">
            Cédula
        </span>
    </div>
    
    {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    
    <div class="wrap-input100 validate-input" data-validate = "Escriba su cedula">
        <input class="input100" type="text" name="cedula" >
        <span class="focus-input100"></span>
    </div>

    <div class="p-t-13 p-b-9">
        <span class="txt1">
            Contraseña
        </span>

    </div>
    <div class="wrap-input100 validate-input" data-validate = "Password is required">
        <input class="input100" type="password" name="clave" >
        <span class="focus-input100"></span>
    </div>

    <div class="container-login100-form-btn m-t-17">
        <button type="submit" class="login100-form-btn">
            Iniciar Sesion
        </button>
    </div>

    <div class="w-full text-center p-t-55">
        <span class="txt2">
            Aún no tienes cuenta?
        </span>

        <a href="/registrar" class="txt2 bo1">
            Registrate ahora
        </a>
    </div>
</form>
